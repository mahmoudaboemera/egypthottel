<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AswanRoom"
    android:background="@drawable/background">
    <LinearLayout
        android:id="@+id/linerd"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="10dp"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/tex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مرحبا"
        android:textSize="26dp"
        android:textColor="#FFC107"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        android:layout_marginTop="10dp"
        android:layout_marginStart="300dp"
        />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ابحث عن الوجهة  اسم مكان الاقامة"
            android:textSize="30dp"
            android:layout_below="@+id/tex"
            android:textColor="#7904FF"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            android:layout_marginTop="10dp"

            />
    </LinearLayout>

    <EditText
        android:id="@+id/texse"
        android:layout_below="@+id/linerd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="مكان الاقامه"
        android:textSize="25dp"
        android:textColor="#000"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        />
    <LinearLayout
android:layout_below="@+id/texse"
        android:id="@+id/lenr"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF9800"
                >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="تسجيل المغادرة"
    android:textColor="#000"
    android:textSize="20dp"
    android:layout_marginStart="80dp"
    android:textAllCaps="true"
    android:textStyle="bold"/>
                <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="#0053FF"
                    android:hint="اختر الميعاد"
                    android:layout_marginStart="80dp"
                    android:textSize="20dp"/>





            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FF9800"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="تسجيل الوصول"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:layout_marginStart="50dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColorHint="#0053FF"
                    android:hint="اختر الميعاد"
                    android:layout_marginStart="80dp"
                    android:textSize="20dp"/>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lenr"
        android:layout_width="400dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/room"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="غرفة"
            android:textSize="20dp"
            android:textColor="#000"
            android:textAllCaps="true"
            android:textStyle="bold|italic"
            android:layout_marginStart="300dp"/>

            <EditText
                android:layout_below="@+id/room"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:hint="عدد الغرف"
                android:textSize="10dp"
                android:textColorHint="#0074FF"
                android:textAllCaps="true"
                android:textStyle="bold|italic"
                android:layout_marginStart="300dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/roomss"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="بالغين"
                android:textSize="20dp"
                android:textColor="#000"
                android:textAllCaps="true"
                android:textStyle="bold|italic"
                android:layout_marginStart="170dp"/>

            <EditText
                android:layout_below="@+id/roomss"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:hint="عدد الافراد"
                android:textSize="10dp"
                android:textColorHint="#0074FF"
                android:textAllCaps="true"
                android:textStyle="bold|italic"
                android:layout_marginStart="170dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rooms"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="'طفل'"
                android:textSize="20dp"
                android:textColor="#000"
                android:textAllCaps="true"
                android:textStyle="bold|italic"
                android:layout_marginStart="50dp"/>

            <EditText
                android:layout_below="@+id/rooms"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:hint="عدد الاطفال"
                android:textSize="10dp"
                android:textColorHint="#0074FF"
                android:textAllCaps="true"
                android:textStyle="bold|italic"
                android:layout_marginStart="50dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_marginTop="650dp"
        android:layout_centerHorizontal="true"
        android:onClick="vizt"
        android:text="تابع الحجز"
        />

</RelativeLayout>
</ScrollView>